<UserControl x:Class="FlashCards.View.LanguageTraining"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlashCards.View"
             mc:Ignorable="d" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:vm="clr-namespace:FlashCards.ViewModel"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="White" DataContext="{StaticResource sharedViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <!-- Pytanie i odpowiedź -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="{Binding LangTrain.Question}" FontSize="24" HorizontalAlignment="Center"/>
                <Line X1="0" Y1="0"
                      X2="500" Y2="0"
                      Stroke="Black"
                      StrokeThickness="2.5"/>
                <Label Content="{Binding LangTrain.Answer}" FontSize="24" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Pokazanie odpowiedzi -->
            <Button Content="Pokaż odpowiedź" FontSize="17" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="145" Height="30" Command="{Binding LangTrain.ShowAnswer}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Label Content="Jak ci poszło ?" FontSize="17" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

            <!-- Przyciski od aktualizacji -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button Content="-1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="30"
                        Command="{Binding LangTrain.GrantMinusOne}"/>

                <Button Content="+1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="30"
                        Command="{Binding LangTrain.GrantPlusOne}"/>

                <Button Content="+3" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="30"
                        Command="{Binding LangTrain.GrantPlusThree}"/>

            </Grid>

        </Grid>
    </Grid>
</UserControl>
